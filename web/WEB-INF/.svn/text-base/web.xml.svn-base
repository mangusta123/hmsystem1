<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Homework Management System</display-name>
    <servlet>
        <servlet-name>UserManager</servlet-name>
        <servlet-class>favu.hms.controller.user.UserManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CourseManager</servlet-name>
        <servlet-class>favu.hms.controller.course.CourseManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeworkManager</servlet-name>
        <servlet-class>favu.hms.controller.course.HomeworkManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HWSubmissionManager</servlet-name>
        <servlet-class>favu.hms.controller.course.HWSubmissionManager</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addHomework</servlet-name>
        <jsp-file>/WEB-INF/jsp/add_homework.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>viewInstructor</servlet-name>
        <jsp-file>/WEB-INF/jsp/v_instructor.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>viewStudent</servlet-name>
        <jsp-file>/WEB-INF/jsp/v_student.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>homework</servlet-name>
        <jsp-file>/WEB-INF/jsp/v_homework.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>listSubmissions</servlet-name>
        <jsp-file>/WEB-INF/jsp/v_submissions_by_hw.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserManager</servlet-name>
        <url-pattern>/login.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CourseManager</servlet-name>
        <url-pattern>/CourseManager</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeworkManager</servlet-name>
        <url-pattern>/removeHomework.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeworkManager</servlet-name>
        <url-pattern>/addHomework.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addHomework</servlet-name>
        <url-pattern>/addHomework.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeworkManager</servlet-name>
        <url-pattern>/updateHomework.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewInstructor</servlet-name>
        <url-pattern>/instructorHome.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>viewStudent</servlet-name>
        <url-pattern>/studentHome.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homework</servlet-name>
        <url-pattern>/homework.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listSubmissions</servlet-name>
        <url-pattern>/submissions.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HWSubmissionManager</servlet-name>
        <url-pattern>/viewSubmission.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HWSubmissionManager</servlet-name>
        <url-pattern>/gradeSubmission.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HWSubmissionManager</servlet-name>
        <url-pattern>/submitSubmission.cgi</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeworkManager</servlet-name>
        <url-pattern>/addMessage.cgi</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        </welcome-file-list>
    </web-app>
